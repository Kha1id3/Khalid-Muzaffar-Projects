@model GameModel

@{
    ViewData["Title"] = "Number Guessing Game";
}

<h2>Number Guessing Game</h2>
<p class="@ViewBag.CssClass">@ViewBag.Message</p>
<form asp-controller="Game" asp-action="Guess">
    <label for="guess">Your Guess:</label>
    <input type="number" id="guess" name="guess" required>
    <input type="submit" value="Submit">
</form>
