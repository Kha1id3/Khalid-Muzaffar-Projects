@{
    ViewData["Title"] = "Number Guessing Game";
}

<h2>Number Guessing Game</h2>

<p>@ViewBag.Message</p>

<form asp-controller="Game" asp-action="Guess">
    <div class="form-group">
        <label for="guess">Your Guess:</label>
        <input type="number" class="form-control" id="guess" name="guess" required>
        <input type="submit" value="Submit" class="btn btn-primary">
    </div>
</form>

<p>Attempts: @ViewBag.GuessCount</p>

<div>
    <a asp-controller="Game" asp-action="Set" asp-route-n="30">Set Range to 30</a> |
    <a asp-controller="Game" asp-action="Draw">Draw New Number</a>
</div>
