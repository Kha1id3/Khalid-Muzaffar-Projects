@model IEnumerable<Article>

<h2>Articles</h2>

<p>
    <a href="@Url.Action("Create")">Create New</a>
</p>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Expiration Date</th>
        <th>Category</th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>@item.Price</td>
        <td>@item.ExpirationDate.ToShortDateString()</td>
        <td>@item.Category</td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.Id })">Edit</a> |
            <a href="@Url.Action("Delete", new { id = item.Id })">Delete</a>
        </td>
    </tr>
}
</table>
